{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "DISABLE_EXTERNAL_DEPS_WARNINGS": "ON",
        "WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "dev",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CXX": "g++-14",
        "CC": "gcc-14"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-asan",
      "inherits": "dev",
      "cacheVariables": {
        "ENABLE_ASAN": "ON",
        "ADDRESS_SANITIZER": "ON"
      }
    },
    {
      "name": "dev-ubsan",
      "inherits": "dev",
      "cacheVariables": {
        "ENABLE_ASAN": "ON",
        "UB_SANITIZER": "ON"
      }
    },
    {
      "name": "dev-clang",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "CXX": "clang++",
        "CC": "clang"
      }
    },
    {
      "name": "dev-clang-asan",
      "inherits": "dev-clang",
      "cacheVariables": {
        "ADDRESS_SANITIZER": "ON"
      }
    },
    {
      "name": "dev-clang-ubsan",
      "inherits": "dev-clang",
      "cacheVariables": {
        "UB_SANITIZER": "ON"
      }
    },
    {
      "name": "dev-clang-tsan",
      "inherits": "dev-clang",
      "cacheVariables": {
        "THREAD_SANITIZER": "ON"
      }
    }
  ]
}
